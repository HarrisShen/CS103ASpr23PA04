
<h1> Transactions for <%= user.username %> </h1>

<p> Here is your recorded transactions! </p>

<div class="col mb-2">
  <a href="/transaction/byCategory" class="btn btn-primary"> group by category </a>
  <a href="?sortBy=category" class="btn btn-primary"> sort by category </a>
  <a href="?sortBy=amount" class="btn btn-primary"> sort by amount </a>
  <a href="?sortBy=description" class="btn btn-primary"> sort by description </a>
  <a href="?sortBy=date" class="btn btn-primary"> sort by date </a>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
      <th> Description </th>
      <th> Amount </th>
      <th> Category </th>
      <th> Date </th>
      <th> Delete </th>
      <th> Edit </th>
    </thead>
    <% items.forEach(item => { %>
      <tr>
        <td> <%= item.description %> </td>
        <td> <%= item.amount %> </td>
        <td> <%= item.category %> </td>
        <td> <%= item.date.toDateString() %> </td>
        <td> <a href="/transaction/remove/<%=item._id %>"> <i class="bi bi-trash"></i> </a> </td>
        <td> <a href="/transaction/edit/<%=item._id %>"> <i class="bi bi-pencil-square"></i> </a> </td>
      </tr>
    <% }) %>
</table>

<h1>Add a new transaction!</h1>
<form method="post" action="transaction">
    <input type="text" name="description" placeholder="description"><br>
    <input type="text" name="amount" placeholder="amount"><br>
    <input type="text" name="category" placeholder="category"><br>
    <input type="text" name="date" placeholder="mm/dd/yyyy"><br>
    <input type="submit" value="store">
</form>
