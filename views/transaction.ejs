
<h1> Transactions for <%= user.username %> </h1>

<p> Here is your recorded transactions! </p>
<table class="table table-striped table-hover">
    <tr>
        <th> Description </th>
        <th> Amount </th>
        <th> Category </th>
        <th> Date </th>
        <th> Delete </th>
        <th> Edit </th>
    </tr>
    <% items.forEach(item => { %>
      <tr>
          <td> <%= item.description %> </td>
          <td> <%= item.amount %> </td>
          <td> <%= item.category %> </td>
          <td> <%= item.date.toDateString() %> </td>
          <td> <a href="/transaction/remove/<%=item._id %>"> <i class="bi bi-trash"></i> </a> </td>
          <td> <a href="/transaction/edit/<%=item._id %>"> <i class="bi bi-pencil-square"></i> </a> </td>
      </tr>
    <% }) %>
</table>

<h1>Add a new transaction!</h1>
<form method="post" action="transaction">
    <input type="text" name="description" placeholder="description"><br>
    <input type="text" name="amount" placeholder="amount"><br>
    <input type="text" name="category" placeholder="category"><br>
    <input type="text" name="date" placeholder="mm/dd/yyyy"><br>
    <input type="submit" value="store">
</form>
